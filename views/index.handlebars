<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Employees!</h1>
    <h2>List of employees on duty!</h2>
    <ul>
  {{#each employees}}
    {{#unless inactive}}
      {{> employees/employees-block active=true}}
    {{/unless}}
  {{/each}}
</ul>
<h2>Employees off duty!</h2>
<ul>
  {{#each employees}}
    {{#if inactive}}
      {{> employees/employees-block active=false}}
    {{/if}}
  {{/each}}
</ul>
<h2>Add a employees</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Employee Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="inactive">Off?</label><br>
    <input type="radio" name="inactive" value="1" checked> Off!<br>
    <input type="radio" name="inactive" value="0"> active
  </div>

  <button type="submit">Add Employee</button>
</form>
    {{!-- <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p> --}}
  </div>
</div>











